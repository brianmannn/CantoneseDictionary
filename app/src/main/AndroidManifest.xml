<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.crazyhands.dictionary">

    <uses-permission android:name="android.permission.RECORD_AUDIO" />
    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/cantonese_dictionary"
        android:label="@string/app_name"
        android:roundIcon="@drawable/cantonese_dictionary"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">

        <provider
            android:name=".data.DictionaryProvider"
            android:authorities="com.crazyhands.dictionary"
            android:exported="false" />

        <activity android:name=".CloudEditorActivity" />
        <activity
            android:name=".BaseActivityWithNav"

            android:label="@string/title_activity_base_with_nav"
            android:theme="@style/AppTheme.NoActionBar">

            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <service
            android:name="com.crazyhands.dictionary.AuthenticatorService">
            <intent-filter>
                <action android:name="android.accounts.AccountAuthenticator"/>
            </intent-filter>
            <meta-data
                android:name="android.accounts.AccountAuthenticator"
                android:resource="@xml/authenticator" />
        </service>

    </application>

</manifest>